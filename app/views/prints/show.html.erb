<div class="container-fluid pb-5 text-center">

<div class="container-fluid mt-3 p-5 text-center">
  <div >

    <div class="prod-card my-3">
      <% if Rails.env.test? %>
          <%= image_tag "photo1.jpeg", alt: "test image" %>
        <% else %>
          <%=image_tag @print["image"] %>
        <% end %>
      <h1 class="mt-3 px-5"><%= @print["title"] %></h1>
      <p class="prod-price"> <%= number_to_currency(@print["price"] / 100.00, :unit=> 'â‚¬') %></p>
      <p class="px-5"><%= @print["description"] %></p>
        <% if @prints_cart.include?(@print) %>
          <%= button_to 'Remove from cart', remove_from_cart_prints_path(@print["id"]), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <p>
            <%= button_to "Purchase Print", add_to_cart_prints_path(@print["id"]), method: :post, class: "btn btn-primary mt-3" %>
          </p>
        <% end %>
    </div>
  </div>
</div>

</div>
