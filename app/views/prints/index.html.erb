
<div class="container pb-5">
  <div class="text-center mt-3">
    <h1>Prints</h1>
  </div>



  <div class="row row-cols-1 row-cols-md-2" id="products" data-controller="prints">
    <% @products.each do |product| %>

      <div class="col-sm-6 d-flex align-items-stretch">

        <div class="card my-5 mx-3 p-3 shadow rounded" data-action="click->prints#openproduct" data-url="/products/<%= product.id %>">

          <div class="ribbon"><span>Available</span></div>

          <%= image_tag product.image %>
          <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
              <p class="card-text"><%= product.description %></p>
              <div class="d-flex flex-row">
                  <small>
                    <%= number_to_currency(product.price / 100.00, :unit=> 'â‚¬') %>
                  </small>
              </div>
            </div>
          <% if @cart.include?(product) %>
            <p>In your cart <i class="fa-solid fa-cart-shopping"></i></p>
          <% end %>
        </div>

      </div>

    <% end %>
  </div>
  <div class="container pages-list">
    <%= paginate @products %>
  </div>

</div>
